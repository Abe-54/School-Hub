<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView android:id="@+id/imageView2" android:layout_width="match_parent" android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etComment"
        app:srcCompat="@drawable/school_hub_app_bg" />
    <include android:id="@+id/include2" layout="@layout/toolbar_main" android:layout_width="match_parent"
        android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/tvPost" android:layout_width="0dp" android:layout_height="100dp"
        android:layout_marginStart="10dp" android:layout_marginTop="8dp" android:layout_marginEnd="10dp"
        android:background="#56DAD4D4" android:hint="Post Text" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/include2" />

    <EditText android:id="@+id/etComment" android:layout_width="298dp" android:layout_height="52dp"
        android:layout_marginStart="10dp" android:layout_marginTop="5dp" android:background="#56DAD4D4"
        android:hint="Comment" android:maxLength="300" android:maxLines="3"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvPost"
        tools:ignore="SpeakableTextPresentCheck" />


    <ImageButton android:id="@+id/btnPostComment" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="12dp" android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/etComment" app:layout_constraintTop_toBottomOf="@+id/tvPost"
        app:srcCompat="@android:drawable/ic_menu_send" tools:ignore="SpeakableTextPresentCheck" />
    <ImageButton android:id="@+id/backButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="34dp" android:layout_marginTop="10dp" android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" tools:ignore="SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvPostComments" android:layout_width="0dp"
        android:layout_height="0dp" android:layout_marginStart="10dp" android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp" android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etComment"></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>

