<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.fragments.AdminProfileFragment">

    <TextView
        android:id="@+id/tvAdminClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="CLUB NAME"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivAdminClubProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivAdminClubProfile"
        android:layout_width="142dp"
        android:layout_height="112dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/no_profile_image"
        tools:src="@mipmap/no_profile_image" />

    <ImageButton android:id="@+id/btnSettings" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" android:src="@android:drawable/ic_menu_manage"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toEndOf="@+id/ivAdminClubProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminClubName" tools:ignore="SpeakableTextPresentCheck" />
    <androidx.cardview.widget.CardView
        android:layout_width="383dp"
        android:layout_height="459dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#CF9797"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings"
        app:layout_constraintVertical_bias="0.058">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/tvAdminClubDescriptionTitle" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="48dp"
                android:background="#E1D8D8" android:text="Club Description:" android:textSize="25sp"
                android:visibility="gone" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView android:id="@+id/tvAdminClubDescription" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                android:background="#E1D8D8" android:hint="CLUB DESCRIPTION GOES HERE" android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />
            <Button android:id="@+id/btnAdminEventsArchive" android:layout_width="146dp" android:layout_height="48dp"
                android:layout_marginStart="116dp" android:layout_marginBottom="40dp" android:text="All Events"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>