<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlClubItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.7"
    android:background="@drawable/rounded_edge_et"
    android:backgroundTint="#56DAD4D4"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivClubImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvClubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/ivClubImage"
        android:hint="CLUB NAME" />

    <TextView
        android:id="@+id/tvClubDescription"
        android:layout_width="293dp"
        android:layout_height="76dp"
        android:layout_below="@+id/tvClubName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/ivClubImage"
        android:hint="The Club Description will go here!" />
</RelativeLayout>
