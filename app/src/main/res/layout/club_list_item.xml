<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlClubItemContainer" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp" android:background="@drawable/rounded_edge_et" android:backgroundTint="@color/grey"
    android:padding="10dp">

    <ImageView android:id="@+id/ivClubImage" android:layout_width="75dp" android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" tools:src="@tools:sample/avatars" />
    <TextView android:id="@+id/tvClubName" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="15dp" android:hint="CLUB NAME" android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/ivClubImage" app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/tvClubDescription" android:layout_width="285dp" android:layout_height="64dp"
        android:layout_marginStart="15dp" android:hint="The Club Description will go here!"
        android:textColor="@color/black" app:layout_constraintStart_toEndOf="@+id/ivClubImage"
        app:layout_constraintTop_toBottomOf="@+id/tvClubName" />
</androidx.constraintlayout.widget.ConstraintLayout>
