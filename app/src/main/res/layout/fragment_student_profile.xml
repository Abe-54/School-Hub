<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school_hub_app_bg"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".student.fragments.StudentProfileFragment">

    <ImageView
        android:id="@+id/ivStudentImage"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/no_profile_image"
        tools:src="@mipmap/no_profile_image" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClubListProfileScreen"
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_marginBottom="8dp"
        android:background="#ECE4E4"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnSignOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvClubListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="My Clubs"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rvClubListProfileScreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStudentImage"
        app:layout_constraintVertical_bias="0.729"
        tools:fontFamily="sans-serif-medium" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="149dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-light"
        android:text="NAME"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvClubListTitle"
        app:layout_constraintStart_toEndOf="@+id/ivStudentImage" />

</androidx.constraintlayout.widget.ConstraintLayout>