<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="student.fragments.StudentHomeFragment" >

    <FrameLayout android:id="@+id/newsPlaceholder" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_below="@+id/newsTabBar" android:layout_marginTop="0dp">

    </FrameLayout>
    <com.google.android.material.tabs.TabLayout android:id="@+id/newsTabBar" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem android:id="@+id/tiCampusAnView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Campus News" />

        <com.google.android.material.tabs.TabItem android:id="@+id/tiClubsAnView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Clubs News" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>