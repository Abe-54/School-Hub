<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/school_hub_app_bg" android:padding="5dp">

    <ImageView android:id="@+id/ivSingleComment" android:layout_width="64dp" android:layout_height="71dp"
        android:layout_marginStart="10dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView android:id="@+id/tvSingleComment" android:layout_width="230dp" android:layout_height="73dp"
        android:layout_marginStart="28dp" android:background="#56DAD4D4" android:ellipsize="none"
        android:maxLength="200" android:maxLines="2" android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/ivSingleComment" app:layout_constraintTop_toTopOf="parent" />

    <ImageButton android:id="@+id/imageButton2" android:layout_width="49dp" android:layout_height="54dp"
        android:layout_marginStart="5dp" android:layout_marginTop="20dp" android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleComment" app:srcCompat="@android:drawable/stat_notify_chat"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton android:id="@+id/imageButton3" android:layout_width="56dp" android:layout_height="56dp"
        android:layout_marginStart="80dp" android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton4" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleComment" app:srcCompat="@android:drawable/ic_menu_upload"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton android:id="@+id/imageButton4" android:layout_width="49dp" android:layout_height="54dp"
        android:layout_marginStart="5dp" android:layout_marginTop="20dp" android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2" app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/tvSingleComment" app:srcCompat="@android:drawable/stat_sys_download"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>

